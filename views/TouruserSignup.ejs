<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/userForm.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>



<body style=" background: linear-gradient(313deg, rgb(54, 226, 212) 18%, rgb(37, 184, 69) 80%)no-repeat;">

    <form action="/tourSignup" id="form" method="post">
        <h2 class="mb-4">Create form</h2>

        <div class="row extra">
            <div class="col-md-3">

                <label for="">Name</label>
            </div>
            <div class="col-md-9">
                <label id="nameLable"></label>
                <input type="text" name="name" id="nameInput">
               </div>
        </div>
        <div class="row extra">
            <div class="col-md-3">
                <label for="">Email</label>
            </div>
            <div class="col-md-9">
                <label id="emailLable"></label>
              <input type="text" name="email" id="emailInput">
                     

            </div>
        </div>
        <div class="row extra">
            <div class="col-md-3">
                <label for="">Password</label>
            </div>
            <div class="col-md-9">
                <label id="passwordLable"></label>
              <input type="password" name="password" id="passwordInput">
                       

            </div>
        </div>
        <div class="row extra">
            <div class="col-md-3">
                <label for="">Re Password</label>
            </div>
            <div class="col-md-9">
                <label id="repasswordLable" style="color: red;"></label>
                <input type="password" id="repasswordInput">
                       

            </div>
        </div>

        <div class="row extra">
            <div class="col-md-3">
                <label for="">Mobile no</label>
            </div>
            <div class="col-md-9">
                <label id="mobileLable"></label>
               <input type="number" name="mobile" id="mobileInput">
                        

            </div>
        </div>
        <button type="submit">Submit</button>
        <a href="/tourLogin" class="text-dark list">Login</a>
        <script>

            let form = document.getElementById("form")

            let nameLable = document.getElementById("nameLable")
            let emailLable = document.getElementById("emailLable")
            let passwordLable = document.getElementById("passwordLable")
            let repasswordLable = document.getElementById("repasswordLable")
            let mobileLable = document.getElementById("mobileLable")

            let nameInput = document.getElementById("nameInput")
            let emailInput = document.getElementById("emailInput")
            let passwordInput = document.getElementById("passwordInput")
            let repasswordInput = document.getElementById("repasswordInput")
            let mobileInput = document.getElementById("mobileInput")
            let reg = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            var regmob = /^([0-9][0-9]{9})$/
            var regname = /^[a-zA-Z]{3,}$/
            var regpass = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,}$/
            form.addEventListener("submit", (e) => {

               

                if (nameInput.value.trim() === "") {
                    nameLable.innerHTML = "please enter your name";
                    e.preventDefault()
                } else {
                    if (regname.test(nameInput.value.trim())) {
                        nameLable.innerHTML = "";
                    } else {
                        nameLable.innerHTML = "Name must be string and min. 3 character";
                    }

                }
                if (emailInput.value.trim() === "") {
                    emailLable.innerHTML = "Please enter your email";
                    e.preventDefault()
                } else {
                    if (reg.test(emailInput.value) == false) {
                        emailLable.innerHTML = "Please enter valid email";
                        e.preventDefault()
                    }
                    else {
                        emailLable.innerHTML = "";
                    }
                }
                if (passwordInput.value.trim() === "") {
                    passwordLable.innerHTML = "Please enter your password";
                    e.preventDefault()
                } 
                else {
                   if(regpass.test(passwordInput.value.trim())){
                    passwordLable.innerHTML = "";
                   }else{
                    passwordLable.innerHTML = "Password must be spacial character";
                    e.preventDefault()
                   }
                }
                if (repasswordInput.value.trim() === "") {

                    repasswordLable.innerHTML = "Please enter your re-password";
                    e.preventDefault()
                } else {
                    if (repasswordInput.value.trim() == passwordInput.value.trim()) {
                        repasswordLable.innerHTML = "";
                } else {
                   
                    repasswordLable.innerHTML = "Please enter same password";
                    e.preventDefault()
                }
                }
                
                if (mobileInput.value.trim() === "") {
                    mobileLable.innerHTML = "Please enter your mobile no";
                    e.preventDefault()
                } else {
                    if (regmob.test(mobileInput.value)) {
                        mobileLable.innerHTML = "";
                } else {
                    mobileLable.innerHTML = "Please enter correct mobile no";
                    e.preventDefault()
                }
                }
               

            }
            )
        </script>
</body>

</html>