        <script>

            let form = document.getElementById("form")
            let nameLable = document.getElementById("nameLable")
            let emailLable = document.getElementById("emailLable")
    
            let nameInput = document.getElementById("nameInput")
            let emailInput = document.getElementById("emailInput")
            let reg = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            var regname = /^[a-zA-Z]{3,}$/
    
            form.addEventListener("submit", (e) => {
            
               if(nameInput.value.trim()===""){
                nameLable.innerHTML = "please enter your name";
                    e.preventDefault()
                }else{
                    if (regname.test(nameInput.value.trim()) == false) {
                        nameLable.innerHTML = "please enter valid name";
                            e.preventDefault()
                        }
                        else {
                            nameLable.innerHTML = "";
                        }
                }
                if(emailInput.value.trim()===""){
                    emailLable.innerHTML = "please enter your email";
                    e.preventDefault()
                }else{
                    if(reg.test(emailInput.value.trim())){
                        emailLable.innerHTML = "";
                       }else{
                        emailLable.innerHTML = "Please enter valid email address";
                        e.preventDefault()
                       }
                }
                
                
            })
        </script>


           
