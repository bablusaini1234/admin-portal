       <section id="userDetails"
            style="background: rgba(0, 0, 0,0.8);position: fixed;top: 0;width: 100%;height: 100%;">
            <div style="width: 35%;margin: auto;margin-top: 20px;">
            <form id="form" action="/userDetails" method="post" class="form" enctype="multipart/form-data">
                <h4>Your account details</h4>
                <div class="mb-3">
                    <label for="exampleInputEmail1">Name</label>
                    <label for="" id="nameLable" style="color: red;"></label>
                    <input type="text" class="form-control" id="nameInput" name="name" value="<%=user.name%>">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                   <label for="" id="emailLable" style="color: red;"></label>
                    <input type="email" class="form-control" id="emailInput" name="email" value="<%=user.email%>"><br>
                    <input type="file" name="img">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/overview" class="btn btn-primary">Back</a>

            </form>
            

