<!DOCTYPE html>
<html lang="en">

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Document</title>
    <link rel="stylesheet" href="/userHome.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .count {
            background: rgb(30, 112, 180);
            text-decoration: none;
            color: #fff;
            padding: 6px 15px;
        }

        .count:hover {
            color: #fff;
        }

        .count-tr {
            position: fixed;
            top: 55%;
        }

        .count:focus {
            background: #000;
        }
    </style>
</head>

<body onload="myfunction()" id="body">
    <div id="loader"></div>
    <section class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-4 left">
                    <h1>CLOVER</h1>
                </div>
                <div class="col-md-8 right">
                    <ul>
                        <li>
                            <a href="/index">Home</a>
                        </li>
                        <li>
                            <a href="/signup">Add Now</a>
                        </li>
                        <li>
                            <a href="/logout2">Logout</a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <table class="w-100">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Mobile</th>
                            <th>Edit</th>
                            <th>Delete</th>


                        </tr>
                        <%userallData.forEach((result)=>{ %>


                            <tr>
                                <td>
                                    <%=result.name%>
                                </td>
                                <td>
                                    <%=result.email%>
                                </td>
                                <td>
                                    <%=result.password%>
                                </td>
                                <td>
                                    <%=result.role==1 ? 'User' : 'Admin' %>
                                </td>
                                <td>
                                    <%=result.status==1 ? 'Active' : 'Disable' %>
                                </td>
                                <td>
                                    <%=result.mobile%>
                                </td>
                                <td><a href="/update/<%= result.id %>" class="text-light edit">Edit</a></td>

                                <td><a href="/delete/<%= result.id %>" class="text-light edit"
                                        onclick="return popup()">Delete</a>
                                </td>
                            </tr>
                            <% })%>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <table>
        <tr class="count-tr">

            <td style="border: none;">
                <% for(let count=1; count <=length; count++ ){ %>
                    <a class="count" href="/count/<%=count %>">
                        <%= count %>
                    </a>

                    <% } %>
            </td>
        </tr>
    </table>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
        // setTimeout(function () {
        //     window.location.reload();
        // }, 1000);
    </script>

    <script>
        var preloader = document.getElementById('loader')

        function myfunction() {
        preloader.style.display = 'none'
       $(document).ready(function () {
                $("#body")
            });

        }
    </script>

    <script>

        function popup() {
            if (confirm("are you sure want to delete this recored")) {
                alert("successfully deleted")
            } else {
                return false
            }
        }

    </script>



</body>

</html>